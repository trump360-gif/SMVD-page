{
  "name": "smvd-cms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node --loader ts-node/esm prisma/seed.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "migrate:blocks": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/migrate-to-blocks.ts",
    "migrate:blocks:dry": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/migrate-to-blocks.ts --dry-run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:report": "playwright show-report",
    "optimize-images": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/optimize-images.ts",
    "optimize-images:dry": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/optimize-images.ts --dry-run"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hello-pangea/dnd": "^18.0.1",
    "@prisma/client": "^5.21.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.21",
    "bcrypt": "^6.0.0",
    "gsap": "^3.14.2",
    "isomorphic-dompurify": "^3.0.0-rc.2",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prisma": "^5.21.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3"
  }
}
